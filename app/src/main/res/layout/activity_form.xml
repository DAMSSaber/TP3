<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.myschool.tp2.FormActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/ui_tx_nom"
            android:text="@string/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ui_edit_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ui_tx_nom"/>


        <TextView
            android:id="@+id/ui_tx_mail"
            android:text="@string/mail"
            android:layout_below="@id/ui_edit_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ui_edit_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ui_tx_mail"/>

        <TextView
            android:id="@+id/ui_tx_mdp"
            android:text="@string/mdp"
            android:layout_below="@id/ui_edit_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/ui_edit_mdp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_below="@id/ui_tx_mdp"/>

        <Button
            android:id="@+id/ui_btn_valide"
            android:text="@string/send"
            android:layout_width="wrap_content"
            android:layout_below="@id/ui_edit_mdp"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>